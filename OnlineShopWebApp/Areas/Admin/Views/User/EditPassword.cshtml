@model UserViewModel

<div class="row">
    <div class="col col-3">
        @await Html.PartialAsync("Menu")
    </div>
    <div class="col col-9">
        <h5 class="display-4">Редактируем пароль пользователя @Model.UserName</h5>
        <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

        <form asp-action="EditPassword" asp-controller="User" asp-area="Admin">
            <div class="row">
                <div class="col">
                    <label asp-for="Password">Пароль</label><br>
                    <input type="text" asp-for="Password" placeholder="@Model.Password"><br>
                    <span asp-validation-for="Password"></span><br>
                    <input hidden type="text" asp-for="UserName" value="@Model.UserName"><br>
                    <input hidden type="text" asp-for="Id" value="@Model.Id"><br>
                    <br>
                    <input type="submit" value="Редактировать"/>
                    <br>
                </div>
            </div>
        </form>
    </div>
</div>
