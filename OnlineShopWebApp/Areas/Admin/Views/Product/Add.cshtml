@model AddProductViewModel

<div class="row">
    <div class="col col-3">
        @await Html.PartialAsync("Menu")
    </div>
    <div class="col col-9">
        <h5 class="display-4">Добавьте новый товар</h5>
        <form enctype="multipart/form-data" asp-action="Add" asp-controller="Product" asp-area="Admin">
            <div class="row">
                <div class="col">
                    <label asp-for="Name">Название</label><br>
                    <input type="text" asp-for="Name"><br>
                    <span asp-validation-for="Name"></span><br>

                    <label asp-for="Cost">Цена</label><br>
                    <input type="number" asp-for="Cost"><br>
                    <span asp-validation-for="Cost"></span><br>

                    <label asp-for="Description">Описание</label><br>
                    <input type="text" asp-for="Description"><br>
                    <span asp-validation-for="Description"></span><br>

                    <div class="form-group">
                        <label>Загрузить новые изображения</label>
                        <input type="file" name="UploadedFiles" multiple accept="image/*" class="form-control" />
                    </div>
                    <div>
                        <button type="submit" asp-area="Admin" asp-controller="Product" asp-action="Add">Добавить</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
