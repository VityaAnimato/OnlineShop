@model EditProductViewModel

<div class="row">
    <div class="col col-3">
        @await Html.PartialAsync("Menu")
    </div>
    <div class="col col-9">
        <h5 class="display-4">Отредактируйте товар</h5>

        <form enctype="multipart/form-data" asp-action="Edit" asp-controller="Product" asp-area="Admin">
            <div class="row">
                <div class="col">

                    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

                    <input type="hidden" name="Id" value="@Model?.Id" />

                    <label asp-for="Name">Название</label><br>
                    <input type="text" asp-for="Name" value="@Model?.Name"><br>
                    <span asp-validation-for="Name"></span><br>

                    <label asp-for="Cost">Цена</label><br>
                    <input type="number" asp-for="Cost" value="@Math.Truncate(Model.Cost)><br>
                    <span asp-validation-for="Cost"></span><br>

                    <label asp-for="Description">Описание</label><br>
                    <input type="text" asp-for="Description" value="@Model?.Description"><br>
                    <span asp-validation-for="Description"></span><br>

                    <div class="row">
                        <div class="col-6">
                            <label>
                                Изображения
                            </label><br />

                            @foreach (var imagePath in Model.ImagesPaths)
                            {
                                <div>
                                    <img src="@imagePath" width="150" height="150" />
                                </div>
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Загрузить новые изображения</label>
                        <input type="file" name="UploadedFiles" multiple accept="image/*" class="form-control" />
                    </div>
                    <div>
                        <button type="submit" asp-area="Admin" asp-controller="Product" asp-action="Edit">Редактировать</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
